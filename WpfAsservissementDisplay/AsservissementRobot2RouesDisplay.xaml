            <Label x:Name="LabelCommandX" Content="0" Grid.Column="1" Grid.Row="4" Foreground="White" Margin="0" Padding="0"/>
            <Label x:Name="LabelCommandTheta" Content="0" Grid.Column="2" Grid.Row="4" Foreground="White" Margin="0" Padding="0"/>
            <Label x:Name="LabelCommandM1" Content="0" Grid.Column="3" Grid.Row="4" Foreground="White" Margin="0" Padding="0"/>
            <Label x:Name="LabelCommandM2" Content="0" Grid.Column="4" Grid.Row="4" Foreground="White" Margin="0" Padding="0"/>


            <Grid Grid.Column="0" Grid.Row="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="KP" Foreground="White" Margin="0" Padding="0"/>
                <Label Grid.Row="1" Content="Correction P" Foreground="White" Margin="0" Padding="0"/>
                <Label Grid.Row="2" Content="Corr P Max" Foreground="White" Margin="0" Padding="0"/>
            </Grid>

            <Grid Grid.Column="0" Grid.Row="6">
