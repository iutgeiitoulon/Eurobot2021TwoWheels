            <Label x:Name="LabelConsigneM2" Content="0" Grid.Column="4" Grid.Row="1" Foreground="White" Margin="0" Padding="0"/>
            <Label x:Name="LabelMeasureX" Content="0" Grid.Column="1" Grid.Row="2" Foreground="White" Margin="0" Padding="0"/>
            <Label x:Name="LabelMeasureTheta" Content="0" Grid.Column="2" Grid.Row="2" Foreground="White" Margin="0" Padding="0"/>
            <Label x:Name="LabelMeasureM1" Content="0" Grid.Column="3" Grid.Row="2" Foreground="White" Margin="0" Padding="0"/>
            <Label x:Name="LabelMeasureM2" Content="0" Grid.Column="4" Grid.Row="2" Foreground="White" Margin="0" Padding="0"/>
            <Label x:Name="LabelErreurX" Content="0" Grid.Column="1" Grid.Row="3" Foreground="White" Margin="0" Padding="0"/>
